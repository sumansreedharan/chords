<body style="background-color: rgb(46, 41, 41);">
<section>
    <div class="untree_co-section product-section before-footer-section">
		    <div class="container">
                <br><br>
                <h1 style="font-family: ;color: rgb(239, 239, 239);">Shop products on category wise</h1>
                <hr>
                <br><br>
		      	<div class="row" style="display: flex; flex-direction: column;">
                    {{#each category}}
		      		<!-- Start Column 1 -->
					<div class="col-12 col-md-4 col-lg-3 mb-5">
						<a class="product-item text-decoration-none " href="/viewProducts?categoryname={{this.name}}">
							<h4 class="text-light fst-italic">{{this.name}}</h4>
                            <hr>
						</a>
					</div> 
					<!-- End Column 1 -->
                    {{/each}}

		      	</div>
		    </div>
		</div>
</section>
</body>