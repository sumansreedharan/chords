
<section class="rounded-3" style="background-color: #4f4c4c;">
    <div class="text-center container py-5">

        <h1 class="text-light">
            <strong>
                Shop products
            </strong>
        </h1>


        <div class="row">
            {{#each Product}}
            <div class=" col-lg-4 col-md-12 mb-4">
                <div style="border-radius: 1em;" class="card ">
                    <div class="mask">
                        <div class="d-flex justify-content-start align-items-end h-100">
                            <h5><span class="text-danger"></span></h5>
                        </div>
                    </div>
                    <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                        data-mdb-ripple-color="light">

                        <a href="/productview?id={{this._id}}"> <img src="/productImages/{{this.image.[0]}}"
                                class="w-100" alt="..." width="200px" height="210px"></a>
                        <div class="hover-overlay">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);">
                            </div>
                        </div>
                        </a>
                    </div>
                    <div class="card-body">
                        <a href="" class="text-reset text-decoration-none ">
                            <h5 class="card-title mb-3 ">{{this.name}}</h5>
                        </a>
                        <a href="" class="text-reset text-decoration-none ">
                            <p>{{this.category}}</p>
                        </a>
                        <h6 class="mb-3">â‚¹{{this.price}}</h6>
                        <li class="list-group-item">Free delivery</li>
                    </div>
                    <div class="card-body">
                        {{#if this.quantity}}
                        <a class="btn the-userbutton" href="/addtocart?id={{this._id}}">Add to Cart</a>
                        {{!-- {{else}} --}}
                        {{!-- <a class="text-decoration-none text-danger " href=""><strong>Out of stock</strong></a> --}}
                        {{/if}}
                        {{!-- <a href="/addtowishlist?id={{this._id}}" class="btn the-userbutton">Add to Wishlist</a> --}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="pt-5">
            <a href="categoryList" class="text-body text-decoration-none"><h5 class="text-light">Back</h5></a>
        </div>
    </div>
</section>
