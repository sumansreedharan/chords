<link rel="stylesheet"type="text/css" href="ordersuccess.css">
<section class="h-100 h-custom" style="background-color: #514c4c;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: #000000 !important;">
      
          <div class="card-body p-5">
            {{!-- {{#each order}} --}}
            <p class="lead fw-bold mb-5" style="color: #16c70d; text-align: center;">Your order placed successfully</p>
            <div class="row">
              
              <div class="col mb-3">
                <p class="small text-muted mb-1">Ordered date:</p>
                <p><strong>{{formattedDate}}</strong></p>
              </div>
              {{#each order}} 
              <div class="col mb-3">
                <p class="small text-muted mb-1">Order No</p>
                <p><strong>{{orderId}}</strong></p>
              </div>
            </div>
            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
              
              <div class="row">
                {{#each product}}
                <div class="col-md-8 col-lg-9">
                  <p><strong>{{this.name}}</strong></p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p><strong>{{this.price}}</strong></p>
                </div>
                  <div class="col-md-8 col-lg-9">
                  <p><strong>Status</strong></p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p><strong>{{../status}}</strong></p>
                </div>
                  <div class="col-md-8 col-lg-9">
                  <p><strong>Quantity</strong></p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p><strong>{{this.quantity}}</strong></p>
                </div>
                {{/each}}
              </div>
              <div class="row">
                <div class="col-md-8 col-lg-9">
                  <p class="mb-0">Shipping</p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p class="mb-0">Free</p>
                </div>
              </div>
            </div>

            <div class="row my-4">
              <div class="col-md-4 offset-md-8 col-lg-3 offset-lg-9">
                <p class="lead fw-bold mb-0" style="color: #000000;">Total:{{subtotal}}</p>
              </div>
            </div>

