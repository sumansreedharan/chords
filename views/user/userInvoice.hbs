<div class="container">
	<div class="row gutters">
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
			<div class="card">
				
				{{!-- <p>Sold by Chords connect</p> --}}
				<div class="card-body p-0">
					<div>
						<button style="margin-left: 1em; margin-top: 1em;" class=" btn btn-secondary" id="download">download</button>
					</div>
					<div id="invoice">
						<div class="invoice-header">
							<div style="text-align: center;"><strong>Invoice details</strong></div>
							<p style="text-align: center;">Sold by Chords connect private limited </p>
						    
							<!-- Row start -->
							<div class="row gutters">
								<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
									<div class="custom-actions-btns mb-5">

									</div>
								</div>
							</div>
							<!-- Row end -->


							{{#each order}}
							<!-- Row start -->
							<div class="row gutters">
								<div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
									<div class="invoice-details">
										<address>
											<strong> Address:</strong>{{addressId}}

										</address>
									</div>
								</div>
								<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
									<div class="invoice-details">
										<div class="invoice-num">
											<div><strong>Date: {{date}}</strong></div>
											<br>
											<div>
												{{#iftrue this.payment_method 1}}
												<h5 style="color: rgb(147, 15, 15);" class="">Payment via: COD</h5>
												{{/iftrue}}

												{{#iftrue this.payment_method 2}}
												<h5 style="color: rgb(57, 57, 224);" class="">Payment Via: UPI</h5>
												{{/iftrue}}
											</div>
											
											<div>Status: <strong>{{status}}</strong></div>

										</div>
									</div>
								</div>
							</div>
							<!-- Row end -->
						</div>
						<div class="invoice-body">
							<!-- Row start -->
							<div class="row gutters">

								<div class="col-lg-12 col-md-12 col-sm-12">
									<div class="table-responsive">
										<table class="table custom-table m-0">

											{{!-- {{#each product}} --}}
											<thead>
												<tr>
													<th>Items</th>
													<th>Order ID</th>
													<th>Quantity</th>
													<th>Price</th>
													<th>Offer price</th>

												</tr>
											</thead>
											{{#each product}}
											<tbody>

												<tr>
													<td>
														<strong>{{name}}</strong>
														{{!-- <p class="m-0 text-muted">
															Reference site about Lorem Ipsum, giving information on its
															origins.
														</p> --}}
													</td>
													<td>{{../orderId}}</td>
													<td>{{quantity}}</td>
													<td>{{price}}</td>
													<td>{{../subtotal}}</td>

												</tr>
											</tbody>
											{{/each}}
											<tr>
												<td>&nbsp;</td>
												<td colspan="2">

													<h5 style="margin-left: 6rem;" class="text-success"><strong>Grand Total</strong></h5>
												</td>
												<td>

													<h5 class="text-success"><strong>{{subtotal}}</strong></h5>
												</td>
											</tr>

											{{!-- {{/each}} --}}
										</table>
									</div>

								</div>
								{{/each}}
							</div>
							<!-- Row end -->
						</div>
						<div style="text-align: center;" class="invoice-footer">
							Chordsconnect.net
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<script>
	window.onload = function () {
		document.getElementById("download")
			.addEventListener("click", () => {
				const invoice = this.document.getElementById("invoice");
				console.log(invoice);
				console.log(window);
				var opt = {
					margin: 1,
					filename: 'chordsInvoice.pdf',
					image: { type: 'jpeg', quality: 0.98 },
					html2canvas: { scale: 2 },
					jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
				};
				html2pdf().from(invoice).set(opt).save();
			})
	}
</script>